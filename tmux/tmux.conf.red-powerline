# Sane scrolling:
set -g terminal-overrides 'xterm*:smcup@:rmcup@'
#
# remap prefix from 'C-b' to 'C-a'
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

# Key bindings:
bind -n C-n next-window
bind -n C-p previous-window

# Powerline:
set-option -g status on
set-option -g status-interval 2
set-option -g status-justify "left"
set-option -g status-left-length 60
set-option -g status-right-length 90
#set-option -g status-left "#(~/git/GitHub/OtherPeople/tmux-powerline/powerline.sh left)"
#set-option -g status-right "#(~/git/GitHub/OtherPeople/tmux-powerline/powerline.sh right)"

# set color for status bar:
set-option -g status-bg black #base02
set-option -g status-fg colour196 #yellow
#set-option -g status-attr dim

# Windows stuff:
setw -g  window-status-separator ""
setw -g window-status-current-format "#[bg=colour196]#[fg=black]#[bg=colour196]#[fg=colour195] #I:#W #[bg=black]#[fg=colour196] "
setw -g window-status-format " #[bg=black]#[fg=colour196]#I:#W "

# Left and right statuses:
set-option -g status-left "[ #T ] "
set-option -g status-right "[ #(whoami) @ #h ]"

# Misc:
set-window-option -g mode-keys vi
set-option -g status-position bottom

