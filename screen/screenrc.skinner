# Source base config:
source ~/git/GitHub/shell-stuff/screen/screenrc

# Open tabs:
screen -t "root"     0 zsh -c "su -"
screen -t "web"      1 zsh -c "cd ~/git/games/webs/; python manage.py runserver localhost:8080"
screen -t "code"     2 zsh -c "cd ~/git/games/webs/; zsh"
screen -t "shell"    3 zsh -c "cd ~/git/games/webs/; zsh"

# Hardline/caption:
caption always "%{Bk} [%S] %{kb}%{Yb} %-w %{bY}%{kY} %n %t %{Yb}%{Yb} %+w %= %{bk}%{Bk} $LOGNAME @ %H"
