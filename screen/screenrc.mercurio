# Source base config:
source ~/git/GitHub/shell-stuff/screen/screenrc

# Open tabs:
screen -t "trunk"    0 zsh -c "cd ~/svn/ProyectosIH/Mercurio/trunk/; zsh"
screen -t "branches" 1 zsh -c "cd ~/svn/ProyectosIH/Mercurio/branches/; zsh"
